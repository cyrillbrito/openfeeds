---
import logoAlt from '../assets/logo-alt.svg';
---

<header class="border-b border-foreground/10 bg-background">
  <div class="mx-auto flex max-w-6xl items-center justify-between px-6 py-4">
    <a href="/" class="flex gap-2">
      <img src={logoAlt.src} class="h-12 w-12" alt="OpenFeeds logo" />
      <span class="text-2xl font-bold text-foreground mt-[6px] font-logo">OpenFeeds</span>
    </a>

    <nav class="flex items-center gap-6">
      <a
        href="/ai"
        class="text-foreground/60 hover:text-foreground text-sm font-semibold transition-colors"
      >
        AI
      </a>
      <a
        href="https://github.com/cyrillbrito/openfeeds"
        target="_blank"
        rel="noopener noreferrer"
        class="text-foreground/60 hover:text-foreground text-sm font-semibold transition-colors"
      >
        GitHub
      </a>
      <a
        href="/signup"
        class="bg-foreground hover:bg-foreground/90 rounded-lg px-4 py-2 text-sm font-semibold text-background transition-all"
      >
        Get Started
      </a>
    </nav>
  </div>
</header>
