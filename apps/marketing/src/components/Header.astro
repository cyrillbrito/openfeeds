---
import GitHubIcon from './icons/GitHubIcon.astro';
import TwitterIcon from './icons/TwitterIcon.astro';
---

<header class="border-b border-foreground/10 bg-background">
  <div class="mx-auto flex max-w-6xl items-center justify-between px-6 py-4">
    <a href="/" class="flex gap-2">
      <img src="/logo-alt.svg" class="h-12 w-12" alt="OpenFeeds logo" />
      <span class="text-2xl font-bold text-foreground mt-[6px] font-logo">OpenFeeds</span>
    </a>

    <div class="flex items-center gap-4">
      <a
        href="https://twitter.com/cyrillbrito"
        target="_blank"
        rel="noopener noreferrer"
        class="text-foreground/60 hover:text-foreground transition-colors"
        aria-label="Follow us on Twitter"
      >
        <TwitterIcon />
      </a>
      <a
        href="https://github.com/cyrillbrito"
        target="_blank"
        rel="noopener noreferrer"
        class="text-foreground/60 hover:text-foreground transition-colors"
        aria-label="View source on GitHub"
      >
        <GitHubIcon />
      </a>
    </div>
  </div>
</header>
