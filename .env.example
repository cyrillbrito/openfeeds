# OpenFeeds Environment Configuration
# Copy to .env and fill in your values
# All apps read from this root .env via --env-file=../../.env in their scripts
# No need to copy .env into individual app directories

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/openfeeds

# Local file storage (for TTS audio files, etc.) - Optional
DATA_PATH=./data

# Redis (BullMQ)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Base URL (used for OAuth/MCP metadata endpoints)
BASE_URL=http://localhost:3000

# Authentication (Better Auth)
# Generate secret: openssl rand -hex 32
BETTER_AUTH_SECRET=
TRUSTED_ORIGINS=http://localhost:3000
# Skip email verification in dev
SIMPLE_AUTH=true

# Email (Resend) - Optional
RESEND_API_KEY=
RESEND_AUDIENCE_ID=

# Analytics (PostHog) - Optional
POSTHOG_PUBLIC_KEY=

# Electric SQL Cloud (optional - only if using Electric Cloud instead of self-hosted)
# Get these from your Electric Cloud dashboard
ELECTRIC_SOURCE_ID=
ELECTRIC_SOURCE_SECRET=

# Text-to-Speech (Unreal Speech) - Optional
# Voices: Scarlett, Dan, Liv, Will, Amy
UNREAL_SPEECH_API_KEY=
TTS_DEFAULT_VOICE=Scarlett
