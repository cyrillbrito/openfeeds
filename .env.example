# OpenFeeds Environment Configuration
# Copy to .env and fill in your values

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/openfeeds

# Local file storage (for TTS audio files, etc.) - Optional
DATA_PATH=./data

# Redis (BullMQ)
REDIS_HOST=localhost
REDIS_PORT=6379

# Authentication (Better Auth)
# Generate secret: openssl rand -hex 32
BETTER_AUTH_SECRET=
VITE_CLIENT_DOMAIN=http://localhost:3000
# Skip email verification in dev
SIMPLE_AUTH=true

# Email (Resend) - Optional
RESEND_API_KEY=
RESEND_AUDIENCE_ID=

# Analytics (PostHog) - Optional
POSTHOG_PUBLIC_KEY=

# Text-to-Speech (Unreal Speech) - Optional
# Voices: Scarlett, Dan, Liv, Will, Amy
UNREAL_SPEECH_API_KEY=
TTS_DEFAULT_VOICE=Scarlett
