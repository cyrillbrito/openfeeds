# ===========================================
# OpenFeeds Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# All apps in the monorepo share this single .env file

# -------------------------------------------
# Database
# -------------------------------------------
# Path to SQLite database files (relative to repo root or absolute)
DB_PATH=./dbs

# -------------------------------------------
# Redis (for BullMQ job queues)
# -------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379

# -------------------------------------------
# Authentication (Better Auth)
# -------------------------------------------
# Generate with: openssl rand -hex 32
BETTER_AUTH_SECRET=

# Your app's public URL (used for auth redirects, CORS)
CLIENT_DOMAIN=http://localhost:3000

# Set to true for development (skips email verification, shorter passwords)
SIMPLE_AUTH=true

# -------------------------------------------
# Analytics (PostHog) - Optional
# -------------------------------------------
POSTHOG_PUBLIC_KEY=

# -------------------------------------------
# Email (Resend) - Optional
# -------------------------------------------
# Required for: password reset emails, verification emails, waitlist
RESEND_API_KEY=
RESEND_AUDIENCE_ID=

# -------------------------------------------
# Text-to-Speech (Unreal Speech) - Optional
# -------------------------------------------
# Get API key from https://unrealspeech.com/
UNREAL_SPEECH_API_KEY=
# Available voices: Scarlett, Dan, Liv, Will, Amy
TTS_DEFAULT_VOICE=Scarlett

# -------------------------------------------
# Legacy/Deprecated (apps/server only)
# -------------------------------------------
# ENABLE_CORS=true
