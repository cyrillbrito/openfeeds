{
  "$schema": "https://turborepo.dev/schema.json",
  "ui": "tui",
  "globalDependencies": [".env"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".output/**"],
      "env": [
        "VITE_*",
        "BASE_URL",
        "BETTER_AUTH_SECRET",
        "DATABASE_URL",
        "DATA_PATH",
        "ELECTRIC_SOURCE_ID",
        "ELECTRIC_SOURCE_SECRET",
        "ELECTRIC_URL",
        "POSTHOG_PUBLIC_KEY",
        "REDIS_HOST",
        "REDIS_PASSWORD",
        "REDIS_PORT",
        "RESEND_API_KEY",
        "RESEND_AUDIENCE_ID",
        "SIMPLE_AUTH",
        "TRUSTED_ORIGINS",
        "TTS_DEFAULT_VOICE",
        "UNREAL_SPEECH_API_KEY",
        "WORKER_CONCURRENCY_AUTO_ARCHIVE",
        "WORKER_CONCURRENCY_FEED_DETAILS",
        "WORKER_CONCURRENCY_FEED_SYNC",
        "WORKER_CONCURRENCY_ORCHESTRATOR"
      ]
    },
    "//#lint": {},
    "check-types": {
      "dependsOn": ["^check-types", "@repo/emails#build"]
    },
    "dev": {
      "dependsOn": ["@repo/emails#build"],
      "cache": false,
      "persistent": true
    }
  }
}
