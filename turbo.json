{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env"],
      "outputs": ["dist/**"],
      "env": [
        "VITE_*",
        "BETTER_AUTH_SECRET",
        "CORS_ORIGINS",
        "DB_PATH",
        "SIMPLE_AUTH",
        "POSTHOG_PUBLIC_KEY"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "inputs": ["$TURBO_DEFAULT$", ".env"],
      "env": [
        "VITE_*",
        "BETTER_AUTH_SECRET",
        "CORS_ORIGINS",
        "DB_PATH",
        "SIMPLE_AUTH",
        "POSTHOG_PUBLIC_KEY"
      ]
    }
  }
}
