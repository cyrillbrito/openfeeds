# OpenFeeds Docker Compose Environment
# Copy to .env and fill in your values

# Database (PostgreSQL)
# For docker-compose.yml and docker-compose.local.yml, this is set in the compose file
# For docker-compose.cloud.yml, set your external database URL here
DATABASE_URL=

# Electric SQL sync service
# For docker-compose.yml and docker-compose.local.yml, this is set in the compose file
# For docker-compose.cloud.yml, set your external Electric URL here
ELECTRIC_URL=

# Electric SQL Cloud (optional - only if using Electric Cloud instead of self-hosted)
# Get these from your Electric Cloud dashboard
ELECTRIC_SOURCE_ID=
ELECTRIC_SOURCE_SECRET=

# Authentication (Better Auth)
# Generate secret: openssl rand -hex 32
BETTER_AUTH_SECRET=
CLIENT_DOMAIN=http://localhost:3200
SIMPLE_AUTH=false

# Email (Resend) - Optional
RESEND_API_KEY=

# Analytics (PostHog) - Optional
POSTHOG_PUBLIC_KEY=

# Text-to-Speech (Unreal Speech) - Optional
# Voices: Scarlett, Dan, Liv, Will, Amy
UNREAL_SPEECH_API_KEY=
TTS_DEFAULT_VOICE=Scarlett
