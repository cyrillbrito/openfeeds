# OpenFeeds Docker Compose Environment
# Copy to .env and fill in your values

# ── App ──────────────────────────────────────────────────────────
# Public URL of the web app (required for OAuth/MCP)
BASE_URL=http://localhost:3000

# ── Database ─────────────────────────────────────────────────────
# For docker-compose.yml and docker-compose.local.yml, this is set in the compose file
# For docker-compose.cloud.yml, set your external database URL here
DATABASE_URL=

# ── Authentication (Better Auth) ────────────────────────────────
# Generate secret: openssl rand -hex 32
BETTER_AUTH_SECRET=
TRUSTED_ORIGINS=http://localhost:3200
SIMPLE_AUTH=false

# ── Electric SQL ─────────────────────────────────────────────────
# For docker-compose.yml and docker-compose.local.yml, this is set in the compose file
# For docker-compose.cloud.yml, set your external Electric URL here
ELECTRIC_URL=
# Cloud-only (optional - only if using Electric Cloud instead of self-hosted)
ELECTRIC_SOURCE_ID=
ELECTRIC_SOURCE_SECRET=

# ── Email (Resend) - Optional ───────────────────────────────────
RESEND_API_KEY=

# ── Analytics (PostHog) - Optional ──────────────────────────────
POSTHOG_PUBLIC_KEY=

# ── Text-to-Speech (Unreal Speech) - Optional ──────────────────
UNREAL_SPEECH_API_KEY=
TTS_DEFAULT_VOICE=Scarlett
# Local file storage for TTS audio files (mount as volume if needed)
# DATA_PATH=/app/data

# ── Worker Tuning - Optional ────────────────────────────────────
# Conservative defaults for small VMs. Increase for higher throughput.
# WORKER_CONCURRENCY_ORCHESTRATOR=1
# WORKER_CONCURRENCY_FEED_SYNC=2
# WORKER_CONCURRENCY_FEED_DETAILS=1
# WORKER_CONCURRENCY_AUTO_ARCHIVE=1
