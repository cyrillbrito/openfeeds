{
  "name": "openfeeds",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "better-auth": "^1.3.28",
      "drizzle-orm": "0.44.7",
      "zod": "^4.1.11",
      "typescript": "^5.9.3"
    }
  },
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "oxlint",
    "check-types": "turbo check-types",
    "checks": "turbo check-types && oxlint",
    "user-db-generate": "turbo -F @repo/db user-db-generate",
    "auth-db-generate": "turbo -F @repo/db auth-db-generate",
    "db-migrate": "turbo -F @repo/db db-migrate",
    "create-user": "bun --cwd=packages/scripts create-user",
    "test-ui": "bun --cwd=apps/e2e test-ui",
    "test-update-snapshots": "cd packages/e2e test-update-snapshots",
    "clean-install": "find . -name \"node_modules\" -type d -exec rm -rf {} + && rm bun.lock && bun install"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@types/bun": "^1.3.1",
    "oxlint": "^1.24.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "turbo": "^2.5.9-canary.10"
  },
  "packageManager": "bun@1.3.0"
}
