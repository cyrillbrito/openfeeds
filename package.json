{
  "name": "openfeeds",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "better-auth": "1.4.12",
      "drizzle-orm": "^0.45.1",
      "zod": "^4.1.13",
      "typescript": "^5"
    }
  },
  "scripts": {
    "dev": "turbo dev --filter=@repo/web --filter=@repo/worker",
    "build": "turbo build",
    "lint": "oxlint",
    "check-types": "turbo check-types",
    "checks": "turbo check-types && oxlint",
    "generate:auth-schema": "turbo -F @repo/db generate:auth-schema",
    "generate:migrations": "turbo -F @repo/db generate:migrations",
    "migrate": "bun --cwd=apps/migrator migrate",
    "create-user": "bun --cwd=packages/scripts create-user",
    "test-ui": "bun --cwd=apps/e2e test-ui",
    "test-update-snapshots": "bun --cwd=apps/e2e test-update-snapshots",
    "clean-install": "find . -name \"node_modules\" -type d -exec rm -rf {} + && rm bun.lock && bun install",
    "test": "echo '123'"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@types/bun": "^1.3.6",
    "oxlint": "^1.41.0",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "turbo": "^2.7.6"
  },
  "packageManager": "bun@1.3.0",
  "patchedDependencies": {
    "better-auth@1.4.12": "patches/better-auth@1.4.12.patch"
  }
}
